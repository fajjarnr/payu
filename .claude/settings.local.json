{
  "permissions": {
    "allow": [
      "Bash"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(rm -rf /)",
      "Bash(ssh *)"
    ]
  },
  "autoApprove": {
    "enabled": true,
    "patterns": [
      "Bash(*)"
    ]
  },
  "confirmations": {
    "fileCreation": false,
    "fileModification": false,
    "fileExecution": false,
    "commandExecution": false
  },
  "interactive": false
}
