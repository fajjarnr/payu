{
  "dashboard": {
    "title": "PayU Business Metrics Dashboard",
    "tags": ["payu", "business", "metrics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Payment Volume (TPV)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(payu_transactions_amount_total[1d]))",
            "legendFormat": "Total Volume",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currency IDR",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000000000, "color": "yellow"},
                {"value": 10000000000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Transaction Count (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(payu_transactions_total[1d]))",
            "legendFormat": "Transactions",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10000, "color": "yellow"},
                {"value": 50000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(payu_transactions_total{status=\"success\"}[5m])) / sum(rate(payu_transactions_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Average Transaction Value",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(payu_transactions_amount_total[1d])) / sum(increase(payu_transactions_total[1d]))",
            "legendFormat": "Average",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currency IDR",
            "decimals": 0
          }
        }
      },
      {
        "id": 5,
        "title": "Transaction Volume Over Time",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(payu_transactions_amount_total[5m])) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currency IDR",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Transaction Count by Type",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(payu_transactions_total[5m])) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "tps",
            "custom": {
              "stacking": "normal",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Conversion Funnel",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "sum(increase(payu_page_view_total[1h]))",
            "legendFormat": "Page Views",
            "refId": "A"
          },
          {
            "expr": "sum(increase(payu_checkout_initiated_total[1h]))",
            "legendFormat": "Checkout Started",
            "refId": "B"
          },
          {
            "expr": "sum(increase(payu_payment_completed_total[1h]))",
            "legendFormat": "Payments Completed",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Top Products by Revenue",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "topk(10, sum(increase(payu_transactions_amount_total[1d])) by (product_id))",
            "legendFormat": "{{product_id}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {"Value": 1},
              "renameByName": {"product_id": "Product ID", "Value": "Revenue"}
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currency IDR",
            "custom": {"align": "left"}
          }
        }
      },
      {
        "id": 9,
        "title": "Transaction Success Rate by Type",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(payu_transactions_total{status=\"success\"}[5m])) by (type) / sum(rate(payu_transactions_total[5m])) by (type) * 100",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 10,
        "title": "Failed Transaction Reasons",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(increase(payu_transactions_total{status=\"failed\"}[1h])) by (failure_reason))",
            "legendFormat": "{{failure_reason}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
