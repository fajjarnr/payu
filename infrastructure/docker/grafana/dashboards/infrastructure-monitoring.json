{
  "dashboard": {
    "title": "PayU Infrastructure Monitoring",
    "tags": ["payu", "infrastructure"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "PostgreSQL - Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "pg_up{job=\"postgres\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Redis - Status",
        "type": "stat",
        "gridPos": {"x": 4, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "redis_up{job=\"redis\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Kafka - Status",
        "type": "stat",
        "gridPos": {"x": 8, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "kafka_broker_info{job=\"kafka\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Prometheus - Status",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Grafana - Status",
        "type": "stat",
        "gridPos": {"x": 16, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"grafana\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Loki - Status",
        "type": "stat",
        "gridPos": {"x": 20, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"loki\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "PostgreSQL - Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{job=\"postgres\"}",
            "legendFormat": "{{datname}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "PostgreSQL - Query Duration",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_statements_total_exec_time_seconds{job=\"postgres\"}[5m])",
            "legendFormat": "{{datname}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "title": "PostgreSQL - Cache Hit Ratio",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(pg_stat_database_blks_hit{job=\"postgres\"}) / (sum(pg_stat_database_blks_hit{job=\"postgres\"}) + sum(pg_stat_database_blks_read{job=\"postgres\"}))",
            "legendFormat": "Cache Hit Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "PostgreSQL - Transaction Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(pg_stat_database_xact_commit{job=\"postgres\"}[5m])) by (datname)",
            "legendFormat": "{{datname}} Commits"
          },
          {
            "expr": "sum(rate(pg_stat_database_xact_rollback{job=\"postgres\"}[5m])) by (datname)",
            "legendFormat": "{{datname}} Rollbacks"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "title": "PostgreSQL - Database Size",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pg_database_size_bytes{job=\"postgres\"}",
            "legendFormat": "{{datname}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "title": "Redis - Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes{job=\"redis\"}",
            "legendFormat": "Memory Used"
          },
          {
            "expr": "redis_memory_max_bytes{job=\"redis\"}",
            "legendFormat": "Memory Max"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "title": "Redis - Operations Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(redis_commands_processed_total{job=\"redis\"}[5m]))",
            "legendFormat": "Commands/sec"
          },
          {
            "expr": "sum(rate(redis_keyspace_hits_total{job=\"redis\"}[5m]))",
            "legendFormat": "Cache Hits/sec"
          },
          {
            "expr": "sum(rate(redis_keyspace_misses_total{job=\"redis\"}[5m]))",
            "legendFormat": "Cache Misses/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "title": "Redis - Connected Clients",
        "type": "graph",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "redis_connected_clients{job=\"redis\"}",
            "legendFormat": "Connected Clients"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "Kafka - Messages In Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(kafka_topic_partition_current_offset{job=\"kafka\"}[5m])) by (topic)",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "title": "Kafka - Consumer Lag",
        "type": "graph",
        "gridPos": {"x": 12, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag{job=\"kafka\"}) by (topic, consumer_group)",
            "legendFormat": "{{topic}} - {{consumer_group}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "Kafka - Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 44, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(kafka_network_io_rate_total{job=\"kafka\"}[5m]))",
            "legendFormat": "Network I/sec"
          },
          {
            "expr": "sum(rate(kafka_request_handler_avg_idle_percent_total{job=\"kafka\"}[5m]))",
            "legendFormat": "Idle %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "title": "Disk Usage by Component",
        "type": "graph",
        "gridPos": {"x": 12, "y": 44, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "node_filesystem_size_bytes{fstype=~\"ext4|xfs\"}",
            "legendFormat": "{{device}}"
          },
          {
            "expr": "node_filesystem_avail_bytes{fstype=~\"ext4|xfs\"}",
            "legendFormat": "{{device}} Available"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "title": "Container Resource Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 52, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_cpu_usage_seconds_total{image!=\"\"}) by (name)",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "title": "Container Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 52, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{image!=\"\"}) by (name)",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      }
    ]
  }
}
