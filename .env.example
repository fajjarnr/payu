# PayU Digital Banking - Environment Variables Template
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=debug

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=payu
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=payu_account

# TimescaleDB (Analytics)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=payu_analytics
TIMESCALE_PASSWORD=your_secure_password_here
TIMESCALE_DB=payu_analytics

# ============================================
# CACHE - Redis/Data Grid
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MESSAGE BROKER - Kafka
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=payu-services
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# For production, use SASL_SSL
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# ============================================
# IDENTITY - Keycloak/Red Hat SSO
# ============================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=payu
KEYCLOAK_CLIENT_ID=payu-backend
KEYCLOAK_CLIENT_SECRET=your_client_secret_here
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your_admin_password_here

# ============================================
# SECRETS - HashiCorp Vault
# ============================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here
# For production, use Kubernetes auth
# VAULT_ROLE=payu-service

# ============================================
# EXTERNAL SERVICES
# ============================================

# BI-FAST Integration
BIFAST_API_URL=http://localhost:8090
BIFAST_CLIENT_ID=
BIFAST_CLIENT_SECRET=

# Dukcapil (eKYC)
DUKCAPIL_API_URL=http://localhost:8091
DUKCAPIL_API_KEY=

# QRIS
QRIS_API_URL=http://localhost:8092
QRIS_MERCHANT_ID=

# ============================================
# OBSERVABILITY
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=payu-service
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

# Prometheus (scrape endpoint)
PROMETHEUS_PORT=9090

# Loki (log aggregation)
LOKI_URL=http://localhost:3100

# ============================================
# SERVICE PORTS
# ============================================
ACCOUNT_SERVICE_PORT=8001
AUTH_SERVICE_PORT=8002
TRANSACTION_SERVICE_PORT=8003
WALLET_SERVICE_PORT=8004
BILLING_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
GATEWAY_SERVICE_PORT=8000
KYC_SERVICE_PORT=8010
ANALYTICS_SERVICE_PORT=8011

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_BIFAST_ENABLED=true
FEATURE_QRIS_ENABLED=true
FEATURE_VIRTUAL_CARDS_ENABLED=true
FEATURE_INVESTMENT_ENABLED=false
FEATURE_LENDING_ENABLED=false
